* {
    background: #1d1f21;         /* menu background */
    border: 1px solid #15a1d4;   /* border around menu */
    border-radius: 8px;           /* rounded corners */
    padding: 5px;
    spacing: 5px;
    width: 200px;                 /* menu width */
    font: "JetBrainsMono Nerd Font Propo 12"; /* font + size */
    text-color: #ffffff;          /* normal text color */
    selected-background: #15a1d4; /* highlight bg */
    selected-foreground: #ffffff; /* highlight text */
}

