{
  "layer": "top",
  "margin-top": 4,
  "margin-left": 4,
  "margin-right": 4,
  "modules-left": ["custom/launcher", "hyprland/workspaces" ],
  "modules-center": ["clock"],
  "modules-right": ["custom/stm32", "cpu", "temperature", "network", "pulseaudio/slider","custom/notification","custom/power"],

  "clock": {
    "format": " ÔÄó {:%H:%M:%S} ",  // 24‚Äëhour with seconds (official syntax)
    "interval": 1,            // refresh per second
    "tooltip-format": "{:%A, %d %B %Y %H:%M:%S}"  // optional nice tooltip
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Û∞ùü",
    "format-icons": {
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
    },
    "scroll-step": 5,
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle", // Toggle mute on click instead!
    "on-click-right": "pavucontrol" // Keep pavucontrol on right-click for emergencies üö®
  },

  // Add this module right after pulseaudio in your 'modules-right'
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },
  "network": {
    "interface": "enp4s0",            // auto‚Äëdetect default interface
    "interval": 1,               // update every second
    "format-wifi": "Ôá´ ",
    "format-ethernet": " Û∞àÄ {bandwidthDownBits}",
    "format-disconnected": " Û∞ñ™ ",
    "tooltip": true,
    "align": 0,
    "tooltip-format": "{ifname} {ipaddr}"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "Ôíâ",      // Nerd Font: Terminal
      "2": "Óôò",      // Nerd Font: Firefox/Browser
      "3": "ÔÑ°",      // Nerd Font: Programming Space
      "4": "ÔÑï",      // Nerd Font: Files/Folders Stuff
      "5": "ÔÅ¥",      // Nerd Font: Miscellaneous
      "6": "ÔÄÅ",      // Nerd Font: Music/ Audio 
      "7": "ÔÖ™",      // Nerd Font: Video Space
      "active": "ÔÜí", // N3rd Font: active workspace
      "default": "ÔÑë" // Nerd Font: inactive workspace
    },
    "persistent-workspaces": {
      "*": 7,        // 5 workspaces by default on every monitor
      "HDMI-A-1": 7  // 5 workspaces on HDMI-A-1
    }
  },

  "custom/launcher": {
    // We boost the size to 'x-large' and use 'rise' to align it perfectly
    "format": "<span size='x-large' rise='-1500'>ÔåÉ</span>", 
    "tooltip": "Application Menu",
    "on-click": "~/.config/rofi/launchers/type-2/launcher.sh || pkill rofi"
  },
  "custom/power": {
    "format": "‚èª ",
    "on-click": "~/.config/waybar/scripts/power-menu.sh",
    "tooltip": false
  },
  "cpu": {
    "interval": 1,
    "align": 0,
    "format": " Ôíº {usage}% "
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 85,
    "interval": 5,
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôãã", "Ôãâ", "Ôãà"],
    "min-length": 6
  },

  "custom/notification": {
    "tooltip": true,
    "format": "<span size='12pt'>{icon}</span>",
    "format-icons": {
      "notification": " Û∞Ö∏",
      "none": " ÔÇ¢",
      "dnd-notification": " Û∞™ì",
      "dnd-none": " Û∞™ì",
      "inhibited-notification": " Û∞Çõ",
      "inhibited-none": " Û∞™ë",
      "dnd-inhibited-notification": " Û∞Çõ",
      "dnd-inhibited-none": " Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/stm32": {
    "format": "{}",
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/stm32_dfu.sh",
    "interval": 1,
    "tooltip": false
  },
}
